<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#27282a"
        android:layout_marginTop="6dp"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdPhoto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:background="#cccccc"
            android:layout_marginRight="8dp"
            fresco:roundedCornerRadius="2dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/place_holder_picture"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            />

        <TextView
            android:id="@+id/tvNameUserComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Luiz Carlos .6h"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/sdPhoto"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvCommentUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Thank you for sharing this beautiful photo. Thank you for sharing this beautiful photo. Thank you for sharing this beautiful photo."
            android:textColor="#aeadb6"
            android:textSize="10sp"
            android:layout_toRightOf="@id/sdPhoto"
            android:layout_below="@id/tvNameUserComment"
            android:layout_marginBottom="6dp"/>
    </RelativeLayout>